<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>${version}</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<!-- bin -->
		<fileSet>
			<directory>target/classes</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
		</fileSet>
		<!-- config -->
		<fileSet>
			<directory>target/classes</directory>
			<outputDirectory>config</outputDirectory>
			<includes>
				<include>*.properties</include>
				<include>*.xml</include>
			</includes>
		</fileSet>
		<!-- doc -->
		<fileSet>
			<directory>doc</directory>
			<outputDirectory>doc</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>

	</fileSets>

	<!-- dependency jar -->
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>

</assembly>

